<p style="color: green"><%= notice %></p>

<%= render @article %>


<% if @article.photo.attached? %>
  <div>
    <%= cl_image_tag @article.photo.key, height: 300, width: 400, crop: :fill %>
  </div>
<% end %>


<div>
  <%= link_to "Edit this article", edit_article_path(@article) %> |
  <%= link_to "Back to articles", root_path %>
  
  <div>
    <%= link_to "Destroy this article", @article, class: "btn btn-danger text-white", data: {turbo_method: :delete, turbo_confirm: "Delete?"} %>
  </div>
</div>
